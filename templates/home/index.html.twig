{% extends 'card.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block card_content %}
<div class="container mt-2">
    <div class="row">
        <div class="col-12 text-center">
            {% if app.user %}
                <p>Bonjour, {{ app.user.name }}</p>
            {% endif %}
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="h5 mb-0">Commission</h2>
                <a href="/commission/new" class="btn btn-primary">Ajouter une commission</a>
            </div>
            <div class="row">
                {% for commission in commissions %}
                    <div class="col-6 col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ commission.name }}</h5>
                                <a href="{{ path('commission_chat', {'id': commission.id}) }}" class="btn btn-secondary">Voir</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12">
                        <p>Aucune commission trouv√©e.</p>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}