{% extends 'card.html.twig' %}
{% block title %}Group List{% endblock %}

{% block card_content %}
    <ul class="list-group">
        {% for group in groups %}
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="me-auto">{{ group.name }} ({{ group.description }})</div>
            <div class="btn-group">
                <a href="" class="btn btn-outline-warning btn-sm">Modifier</a>

                <form method="post" action="{{ path('commission_delete', {id: group.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ group.id) }}">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Supprimer</button>
                </form> 

                <a href="{{ path('commission_chat', {'id': group.id}) }}" class="btn btn-outline-success btn-sm">Voir les messages</a>
            </div>
        </li>
        {% else %}
        <li class="list-group-item">No groups found</li>
        {% endfor %}
    </ul>


 <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="deleteToast" class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
                <div class="toast-body">
                    Êtes-vous sûr de vouloir supprimer le groupe "<span id="groupName"></span>" ?
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                <a href="" id="confirmDelete" class="btn btn-light btn-sm me-2 m-auto">Oui, supprimer</a>
            </div>
        </div>
    </div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const deleteToast = new bootstrap.Toast(document.getElementById('deleteToast'));
    const toastElement = document.getElementById('deleteToast');
    const groupNameElement = document.getElementById('groupName');
    const confirmDeleteLink = document.getElementById('confirmDelete');

    toastElement.addEventListener('show.bs.toast', function (event) {
        const button = event.relatedTarget;
        const groupName = button.getAttribute('data-bs-group-name');
        const deleteUrl = button.getAttribute('href'); // Get the delete URL

        groupNameElement.textContent = groupName;
        confirmDeleteLink.href = deleteUrl; // Set the href for the confirmation link
    });
});
</script>

{% endblock %}